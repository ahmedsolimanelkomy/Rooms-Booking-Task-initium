@model ICollection<Rooms_Booking.ViewModels.BookingViewModels.BookingListViewModel>
<h2 class="text-center">Booking List</h2>
<table class="table table-striped table-bordered table-rounded">

    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Check-In Date</th>
            <th>Check-Out Date</th>
            <th>Number of Rooms</th>
            <th>Discount</th>
            <th>Discount Applied</th>
            <th>Branch Name</th>
            <th>Location</th>

            <th>Go To Details</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookingID</td>
                <td>@item.CheckInDate.ToShortDateString()</td>
                <td>@item.CheckOutDate.ToShortDateString()</td>
                <td>@item.NumberOfRooms</td>
                <td>@item.Discount</td>
                <td>@(item.DiscountApplied ? "Yes" : "No")</td>
                <td>@item.BranchName</td>
                <td>@item.Location</td>

                <td>@Html.ActionLink("Details","Details",new {id = item.BookingID})</td>
            </tr>
        }
    </tbody>
</table>
